---
import Footer from '../components/Footer.astro'

const { LogoDinamic = "/rename.png" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>

  <body>

     <div class="menu">
    <!-- <h1>TECHNOELECTRIC</h1> -->
    <img src={LogoDinamic} alt="" />

    <nav>
      <ul>
        <li><a href="/">INICIO</a></li>
        <li><a href="/nosotros">SERVICIOS</a></li>
        <li><a href="/acerca-de">ACERCA DE</a></li>
        <li><a href="/contacto">CONTACTO</a></li>
      </ul>
    </nav>
  </div>
    <slot />

    <Footer />

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" is:inline></script>
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        AOS.init({
          duration: 1000,
          once: true,
        });
      });
    </script>

  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  html,
  body {
    margin: 0 auto;
    width: 100%;
    max-width: 1920px;

    height: 100%;
    font-family: Arial, Helvetica, sans-serif;
  }

  .menu {
    position: absolute;
    display: flex;
    align-items: end;
    justify-content: space-between;
    gap: 50px;
    padding: 15px 0;
    width: 90%;
    left: 50%;           /* Lo mueve al centro del padre */
    transform: translateX(-50%); /* Lo centra exactamente */

/* position: fixed;
    top: 0;
    z-index: 1000;
    background-color: transparent;              --Quedara pendiente */

  }

  nav ul {
    list-style: none;
    display: flex;
    gap: 10px;
    margin: 0;
    padding: 0;
  }

  nav ul li a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    font-size: clamp(0.8rem, 2vw, 1rem);
    transition: color 0.3s ease;
    padding: 10px 17px;
    border-radius: 2rem;
  }

  nav ul li a:hover {
    background-color: #f7f7f725;
    color: #37c739;
  }

  .menu img {
    width: 25rem;
  }

  h1 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    color: #37c739;
    margin: 0;
    font-weight: 800;
  }


</style>

<style is:global>
  /* Esto hace que la transición sea más lenta y suave */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.8s; /* Cambia 0.8s por el tiempo que quieras (ej: 1s o 2s) */
  }
</style>
