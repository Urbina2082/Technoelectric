---
import Footer from '../components/Footer.astro'

const { LogoDinamic = "/rename.png" , posicion = "absolute"} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>

  <body>

     <div class="menu" style={`position: ${posicion};`}>
    <img src={LogoDinamic} alt="" />

    <button class="hamburger" aria-label="Abrir menú" aria-expanded="false" aria-controls="primary-nav">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav id="primary-nav">
      <ul>
        <li><a href="/">INICIO</a></li>
        <li><a href="/nosotros">SERVICIOS</a></li>
        <li><a href="/acerca-de">ACERCA DE</a></li>
        <li><a href="/contacto">CONTACTO</a></li>
      </ul>
    </nav>
  </div>
    <slot />

    <Footer />

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" is:inline></script>
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        AOS.init({
          duration: 1000,
          once: true,
        });
      });
    </script>

    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const menu = document.querySelector('.menu');
        const btn = document.querySelector('.hamburger');
        const nav = document.getElementById('primary-nav');
        const links = nav ? nav.querySelectorAll('a') : [];

        if (!btn || !menu) return;

        const setAria = (open) => {
          btn.setAttribute('aria-expanded', open ? 'true' : 'false');
        };

        btn.addEventListener('click', () => {
          const isOpen = menu.classList.toggle('open');
          setAria(isOpen);
        });

        // close menu when a link is clicked (mobile)
        links.forEach((a) => {
          a.addEventListener('click', () => {
            if (menu.classList.contains('open')) {
              menu.classList.remove('open');
              setAria(false);
            }
          });
        });

        // close on Escape
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && menu.classList.contains('open')) {
            menu.classList.remove('open');
            setAria(false);
          }
        });
      });
    </script>

  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  html,
  body {
    margin: 0 auto;
    width: 100%;
    max-width: 1920px;

    height: 100%;
    font-family: Arial, Helvetica, sans-serif;
  }

  .menu {
    display: flex;
    align-items: end;
    justify-content: space-between;
    gap: 50px;
    padding: 15px 0;
    width: 90%;
    left: 50%;           /* Lo mueve al centro del padre */
    transform: translateX(-50%); /* Lo centra exactamente */

/* position: fixed;
    top: 0;
    z-index: 1000;
    background-color: transparent;              --Quedara pendiente */

  }

  /* Hamburger button */
  .hamburger {
    display: none;
    width: 40px;
    height: 36px;
    border: 0;
    background: transparent;
    flex-direction: column;
    justify-content: space-between;
    padding: 6px;
    cursor: pointer;
  }

  .hamburger span {
    display: block;
    height: 3px;
    background: #37c739; /* verde del sitio: visible sobre fondos claros */
    border-radius: 3px;
    transition: transform 0.25s ease, opacity 0.25s ease;
    box-shadow: 0 0 0 1px rgba(0,0,0,0.08) inset;
  }

  nav ul {
    list-style: none;
    display: flex;
    gap: 10px;
    margin: 0;
    padding: 0;
  }

  nav ul li a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    font-size: clamp(0.8rem, 2vw, 1rem);
    transition: color 0.3s ease;
    padding: 10px 17px;
    border-radius: 2rem;
  }

  nav ul li a:hover {
    background-color: #f7f7f725;
    color: #37c739;
  }

  .menu img {
    width: 25rem;
  }

  h1 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    color: #37c739;
    margin: 0;
    font-weight: 800;
  }

  @media screen and (max-width: 768px) {
    .menu {
      width: 95%;
      gap: 20px;
    }

    .menu img {
      width: 18rem;
    }

    nav ul li a {
      font-size: clamp(0.7rem, 3vw, 0.9rem);
      padding: 8px 12px;
    }
    /* show hamburger on small screens */
    .hamburger { display: flex; }

    /* hide default horizontal menu */
    nav ul { display: none; }

    /* when menu is open show vertical dropdown */
    .menu.open nav ul {
      display: flex;
      position: absolute;
      right: 2.5%;
      top: 70px;
      flex-direction: column;
      gap: 8px;
      background: rgba(0,0,0,0.7);
      padding: 12px;
      border-radius: 8px;
      z-index: 1200;
      min-width: 160px;
    }

    .menu.open .hamburger span:nth-child(1) { transform: translateY(9px) rotate(45deg); }
    .menu.open .hamburger span:nth-child(2) { opacity: 0; }
    .menu.open .hamburger span:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }
    
  }

</style>

<style is:global>
  /* Esto hace que la transición sea más lenta y suave */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.8s; /* Cambia 0.8s por el tiempo que quieras (ej: 1s o 2s) */
  }
</style>
